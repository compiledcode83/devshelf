{
  "name": "devfeedback",
  "private": true,
  "author": "Olaf Sulich",
  "license": "MIT",
  "scripts": {
    "dev": "lerna run dev",
    "format": "prettier --write \"**/*.{js,ts,tsx}\"",
    "type-check": "tsc --pretty --noEmit",
    "lint": "eslint . --ext ts --ext tsx --ext js"
  },
  "workspaces": {
    "packages": [
      "apps/*"
    ]
  },
  "devDependencies": {
    "lerna": "^3.22.1",
    "@types/jest": "^26.0.13",
    "@types/node": "^14.6.4",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run type-check"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint",
      "npm run format"
    ]
  }
}
